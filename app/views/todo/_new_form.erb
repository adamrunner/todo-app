<%= form_for(TodoItem.new, remote: true, url:todo_index_path) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>
  <br>
  <%= f.label(:note) %>
  <%= f.text_field(:note) %>
  <br>
  <%= f.label(:due_date) %>
  <%= f.datetime_local_field(:due_date) %>
  <br>
  <%= f.submit %>
<% end %>
